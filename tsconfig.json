{
  "compilerOptions": {
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": [
      "es2015",
      "dom",
      "es2015.promise",
      "scripthost"
    ],

    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
    "types": [
//      "node"
    ]
  },
  "include": [
    "types/**/*",
    "src/**/*",
    "tslib"
  ],
  "exclude": [
    //"node_modules",
  ]
}
